<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".JakeActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginTop="5dp"
            app:cardBackgroundColor="@color/white"
            app:cardElevation="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="130dp"
                android:text="@string/PD"
                android:textColor="@android:color/black"
                android:textSize="25sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="245dp"
                android:layout_marginTop="40dp"
                android:gravity="center"
                android:text="@string/PDTexto"
                android:textColor="@android:color/black"
                android:textSize="19sp" />

        </androidx.cardview.widget.CardView>

        <FrameLayout
            android:layout_width="120sp"
            android:layout_height="40sp"
            android:layout_gravity="center"
            android:layout_marginTop="30sp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardBackgroundColor="#FF0000"
                app:cardCornerRadius="10sp"
                app:cardElevation="5sp">

                <TextView
                    android:id="@+id/cardapiofrase"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/Cardapio"
                    android:textColor="@color/white"
                    android:textSize="25sp"
                    android:textStyle="italic" />

            </androidx.cardview.widget.CardView>



        </FrameLayout>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="450sp"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:id="@+id/segundaPD"
                    android:layout_width="200sp"
                    android:layout_height="250sp"
                    android:layout_marginLeft="10sp"
                    android:layout_marginTop="10sp"
                    app:cardBackgroundColor="@color/celeste"
                    app:cardElevation="5sp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="55sp"
                        android:gravity="center"
                        android:text="@string/Segunda"
                        android:textColor="@android:color/black"
                        android:textSize="20sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5sp"
                        android:layout_marginTop="30sp"
                        android:text="Segunda"
                        android:textSize="15sp" />

                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:id="@+id/tercaPD"
                    android:layout_width="200sp"
                    android:layout_height="250sp"
                    android:layout_marginLeft="10sp"
                    android:layout_marginTop="10sp"
                    app:cardBackgroundColor="@color/celeste"
                    app:cardElevation="5sp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="70sp"
                        android:gravity="center"
                        android:text="@string/Terça"
                        android:textColor="@android:color/black"
                        android:textSize="20sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10sp"
                        android:layout_marginTop="30sp"
                        android:text="Terça"
                        android:textSize="15sp" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/quartaPD"
                    android:layout_width="200sp"
                    android:layout_height="250sp"
                    android:layout_marginLeft="10sp"
                    android:layout_marginTop="10sp"
                    app:cardBackgroundColor="@color/celeste"
                    app:cardElevation="5sp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="65sp"
                        android:gravity="center"
                        android:text="@string/Quarta"
                        android:textColor="@android:color/black"
                        android:textSize="20sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10sp"
                        android:layout_marginTop="30sp"
                        android:text="Quarta"
                        android:textSize="15sp" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/quintaPD"
                    android:layout_width="200sp"
                    android:layout_height="250sp"
                    android:layout_marginLeft="10sp"
                    android:layout_marginTop="10sp"
                    app:cardBackgroundColor="@color/celeste"
                    app:cardElevation="5sp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="65sp"
                        android:gravity="center"
                        android:text="@string/Quinta"
                        android:textColor="@android:color/black"
                        android:textSize="20sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10sp"
                        android:layout_marginTop="30sp"
                        android:text="Quinta"
                        android:textSize="15sp" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/sextaPD"
                    android:layout_width="210sp"
                    android:layout_height="250sp"
                    android:layout_marginLeft="10sp"
                    android:layout_marginTop="10sp"
                    app:cardBackgroundColor="@color/celeste"
                    app:cardElevation="5sp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="70sp"
                        android:gravity="center"
                        android:text="@string/Sexta"
                        android:textColor="@android:color/black"
                        android:textSize="20sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10sp"
                        android:layout_marginTop="30sp"
                        android:text="Sexta"
                        android:textSize="15sp" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/sabadoPD"
                    android:layout_width="200sp"
                    android:layout_height="250sp"
                    android:layout_marginLeft="10sp"
                    android:layout_marginTop="10sp"
                    app:cardBackgroundColor="@color/celeste"
                    app:cardElevation="5sp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="65sp"
                        android:gravity="center"
                        android:text="@string/Sabado"
                        android:textColor="@android:color/black"
                        android:textSize="20sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10sp"
                        android:layout_marginTop="30sp"
                        android:text="Sabado"
                        android:textSize="15sp" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/domingoPD"
                    android:layout_width="200sp"
                    android:layout_height="250sp"
                    android:layout_marginLeft="10sp"
                    android:layout_marginTop="10sp"
                    android:layout_marginRight="10sp"
                    app:cardBackgroundColor="@color/celeste"
                    app:cardElevation="5sp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="65sp"
                        android:gravity="center"
                        android:text="@string/Domingo"
                        android:textColor="@android:color/black"
                        android:textSize="20sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10sp"
                        android:layout_marginTop="30sp"
                        android:text="Domingo"
                        android:textSize="15sp" />
                </androidx.cardview.widget.CardView>

            </LinearLayout>
        </HorizontalScrollView>

        <androidx.cardview.widget.CardView
            android:layout_marginTop="15sp"
            android:layout_width="match_parent"
            android:layout_height="35sp"
            app:cardBackgroundColor="@color/red">

            <TextView
                android:text="Tabela Calorica"
                android:textColor="@color/white"
                android:textSize="25sp"
                android:layout_marginLeft="120sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </TextView>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="380sp"
            app:cardElevation="5sp">

            <TextView
                android:textColor="@color/black"
                android:text="@string/preguica"
                android:textSize="23sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </TextView>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>