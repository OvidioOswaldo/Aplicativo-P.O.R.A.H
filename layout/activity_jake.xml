<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".JakeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginTop="5dp"
            app:cardBackgroundColor="@color/white"
            app:cardElevation="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="120dp"
                android:text="@string/casojake"
                android:textColor="@android:color/black"
                android:textSize="25sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="245dp"
                android:layout_marginTop="40dp"
                android:gravity="center"
                android:text="@string/JakeTexto"
                android:textColor="@android:color/black"
                android:textSize="19sp" />

        </androidx.cardview.widget.CardView>
        <FrameLayout
            android:layout_marginTop="30sp"
            android:layout_gravity="center"
            android:layout_width="120sp"
            android:layout_height="40sp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardBackgroundColor="#FF0000"
                app:cardElevation="5sp"
                app:cardCornerRadius="10sp">

                <TextView
                    android:id="@+id/cardapiofrase"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/Cardapio"
                    android:textColor="@color/white"
                    android:textSize="25sp"
                    android:textStyle="italic"/>

            </androidx.cardview.widget.CardView>

        </FrameLayout>


    </LinearLayout>

    <HorizontalScrollView
        android:layout_marginTop="400sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="260sp"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_marginTop="10sp"
                android:layout_marginLeft="10sp"
                android:layout_width="180sp"
                android:layout_height="230sp"
                app:cardBackgroundColor="@color/celeste"
                app:cardElevation="5sp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="55sp"
                    android:text="@string/Segunda"
                    android:textSize="20sp"
                    android:textColor="@android:color/black"
                    android:gravity="center" />

                <TextView
                    android:layout_marginLeft="10sp"
                    android:layout_marginTop="30sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:text="Manha: \n    Ração Light..........32g\nAlmoço:\n    Arroz Integral.......36g"/>


            </androidx.cardview.widget.CardView>



            <androidx.cardview.widget.CardView
                android:layout_marginTop="10sp"
                android:layout_marginLeft="10sp"
                android:layout_width="180sp"
                android:layout_height="230sp"
                app:cardBackgroundColor="@color/celeste"
                app:cardElevation="5sp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="70sp"
                android:text="@string/Terça"
                android:textSize="20sp"
                android:textColor="@android:color/black"
                android:gravity="center" />

            <TextView
                android:layout_marginLeft="10sp"
                android:layout_marginTop="30sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="Manha:\n    Ração Light........32g\nAlmoço:\n    Arroz Integral.....36g" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_marginTop="10sp"
                android:layout_marginLeft="10sp"
                android:layout_width="180sp"
                android:layout_height="230sp"
                app:cardBackgroundColor="@color/celeste"
                app:cardElevation="5sp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="65sp"
                    android:text="@string/Quarta"
                    android:textSize="20sp"
                    android:textColor="@android:color/black"
                    android:gravity="center" />

                <TextView
                    android:layout_marginLeft="10sp"
                    android:layout_marginTop="30sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:text="Manha:\n     Ração Light..........32g\nAlmoço:\n    Cenoura Fatiada...32g" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_marginTop="10sp"
                android:layout_marginLeft="10sp"
                android:layout_width="180sp"
                android:layout_height="230sp"
                app:cardBackgroundColor="@color/celeste"
                app:cardElevation="5sp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="65sp"
                    android:text="@string/Quinta"
                    android:textSize="20sp"
                    android:textColor="@android:color/black"
                    android:gravity="center" />

                <TextView
                    android:layout_marginLeft="10sp"
                    android:layout_marginTop="30sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:text="Manha:\n  Ração Light..........32g\nAlmoço:\n Brocolis..................32g" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_marginTop="10sp"
                android:layout_marginLeft="10sp"
                android:layout_width="180sp"
                android:layout_height="230sp"
                app:cardBackgroundColor="@color/celeste"
                app:cardElevation="5sp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="70sp"
                    android:text="@string/Sexta"
                    android:textSize="20sp"
                    android:textColor="@android:color/black"
                    android:gravity="center" />

                <TextView
                    android:layout_marginLeft="10sp"
                    android:layout_marginTop="30sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:text="Manha:\n  Ração Light........32g\nAlmoço:\n   Banana..............36g" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_marginTop="10sp"
                android:layout_marginLeft="10sp"
                android:layout_width="180sp"
                android:layout_height="230sp"
                app:cardBackgroundColor="@color/celeste"
                app:cardElevation="5sp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="65sp"
                    android:text="@string/Sabado"
                    android:textSize="20sp"
                    android:textColor="@android:color/black"
                    android:gravity="center" />

                <TextView
                    android:layout_marginLeft="10sp"
                    android:layout_marginTop="30sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:text="Manha:\n  Ração Light............32g\n Almoço:\n   Coxa De Frango....20g" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_marginTop="10sp"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"
                android:layout_width="180sp"
                android:layout_height="230sp"
                app:cardBackgroundColor="@color/celeste"
                app:cardElevation="5sp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="65sp"
                    android:text="@string/Domingo"
                    android:textSize="20sp"
                    android:textColor="@android:color/black"
                    android:gravity="center" />

                <TextView
                    android:layout_marginLeft="10sp"
                    android:layout_marginTop="30sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:text="Manha:\n  Ração Light...........32g\nAlmoço:\n   Ovo Cozido...........32g" />
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </HorizontalScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>





